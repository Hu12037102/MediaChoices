<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/riv_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:riv_oval="false"
    app:riv_corner_radius="@dimen/media_radius"
    tools:background="@mipmap/icon_media_image_placeholder"
    tools:src="@mipmap/icon_media_image_placeholder"
    />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_media_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_media_default"
        android:padding="@dimen/size_5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_video_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_media_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/size_10dp"
        tools:text="02:20"
        android:drawablePadding="@dimen/size_5dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_12sp"
        android:background="@color/color3300000"
        android:visibility="gone"
        />
    <View
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color80000000"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>