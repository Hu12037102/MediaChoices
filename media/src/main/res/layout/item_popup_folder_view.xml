<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color80000000"
    android:orientation="vertical"
  >
    <com.xiaobai.media.weight.BaseRecyclerView
        android:id="@+id/brv_folder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_mask"
        android:background="@color/colorWhite"
        />
    <View
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brv_folder"
        />



</LinearLayout>