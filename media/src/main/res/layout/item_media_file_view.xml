<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/aiv_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="@mipmap/icon_media_image_placeholder"
    tools:src="@mipmap/icon_media_image_placeholder"
    />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_media_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/size_5dp"
        android:gravity="center_vertical"
        tools:text="02:20"
        android:drawablePadding="@dimen/size_5dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_12sp"
        android:visibility="visible"
        />

    <View
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <FrameLayout
        android:id="@+id/fl_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/size_5dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_media_check"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_10sp"
        tools:text="1"
        android:gravity="center"
        android:background="@drawable/shape_check_media_count_view"
        />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>